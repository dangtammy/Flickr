@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Flickr.Models.Photo>

@if (Model.Any())
{
        @foreach (var listPhoto in Model)
        {
            <h2 class="test">@Html.DisplayFor(modelItem => listPhoto.Title)</h2>
            <img class="user-img" src="@Html.DisplayFor(modelItem => listPhoto.Image)" />
            <h4>@Html.DisplayFor(modelItem => listPhoto.Description)</h4>
            <p> @Html.ActionLink("Details", "Details", new { id = listPhoto.Id}) | @Html.ActionLink("Edit", "Edit", new { id = listPhoto.Id }) | @Html.ActionLink("Delete", "Delete", new { id = listPhoto.Id })</p>
        }
}
else
{
    <p>No photos have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")